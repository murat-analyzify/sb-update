{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (max-width: 749px) {
    {% if section.settings.custom_mobile_padding %}
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.mobile_padding_top }}px;
        padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      }
    {% endif %}
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      margin-top: 80px;
      margin-bottom: 80px;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .collapsible-content__header {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 3rem;
  }
  .collapsible-content__media {
    margin-bottom: 3rem;
    display: block;
    position: relative;
    overflow: hidden;
  }
  .collapsible-content__media img {
    width: 100%;
    height: auto;
    display: block;
  }

  .collapsible-row-layout .accordion {
    background: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    padding: 1.5rem 2rem;
    margin-bottom: 1rem;
    border: none;
  }
  .collapsible-row-layout .accordion details {
    border-bottom: none;
    padding: 0;
  }

  .accordion {
    border-bottom: 1px solid #E5E5E5;
  }
  .accordion:first-of-type {
    border-top: 1px solid #E5E5E5;
  }
  .collapsible-row-layout .accordion:first-of-type {
    border-top: none;
  }

  .accordion details { padding: 1.5rem 0; margin-top: 1rem; }
  .accordion summary { display: flex; justify-content: space-between; align-items: center; cursor: pointer; list-style: none; }
  .accordion summary::-webkit-details-marker { display: none; }
  .accordion__title { margin: 0; font-size: 1.6rem; word-break: break-word; padding-right: 1rem; }
  .accordion__content { margin-top: 1.5rem; padding-right: 2.5rem; }
  .accordion__icon { width: 2rem; height: 2rem; flex-shrink: 0; margin-left: 1rem; }
  details[open] > summary .icon-plus { display: none; }
  details:not([open]) > summary .icon-minus { display: none; }

{%- endstyle -%}

<div 
  class="
      color-{{ section.settings.color_scheme }} gradient
  "
>
  <div class="collapsible-content page-width section-{{ section.id }}-padding     {% if section.settings.layout == 'section' %}
      color-{{ section.settings.container_color_scheme }} gradient
    {% endif %}">
    <div class="collapsible-content__header">
      {%- if section.settings.caption != blank -%}
        <p class="caption-with-letter-spacing">{{ section.settings.caption | escape }}</p>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 
          class="collapsible-content__heading inline-richtext" 
          style="font-size: {{ section.settings.heading_size }}px;"
        >
          {{ section.settings.heading }}
        </h2>
      {% endif %}
    </div>

    {%- if section.settings.image != blank -%}
      <div class="collapsible-content__media">
        {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy' }}
      </div>
    {%- endif -%}

    <div style="max-width: 80%; margin-right:auto; margin-left:auto;">
        <div class="collapsible-content__rows-wrapper">
            {%- for block in section.blocks -%}
                <div 
                  class="accordion collapsible-{{ section.settings.layout }}-layout 
                    {% if section.settings.layout == 'row' %}
                      color-{{ section.settings.container_color_scheme }} gradient
                    {% endif %}
                  " 
                  {{ block.shopify_attributes }}
                >
                  <details id="Details-{{ block.id }}-{{ section.id }}" {% if section.settings.open_first_collapsible_row and forloop.first %}open{% endif %}>
                      <summary id="Summary-{{ block.id }}-{{ section.id }}">
                      <h3 class="accordion__title inline-richtext h4">
                          {{ block.settings.heading | default: 'Collapsible row' }}
                      </h3>
                      <div class="accordion__icon">
                          <svg xmlns="http://www.w3.org/2000/svg" class="icon-plus" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                          <svg xmlns="http://www.w3.org/2000/svg" class="icon-minus" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" /></svg>
                      </div>
                      </summary>
                      <div class="accordion__content rte" id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}">
                      {{ block.settings.row_content }}
                      </div>
                  </details>
                </div>
            {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% if section.settings.show_section_divider %}
  <div class="page-width"><hr></div>
{% endif %}

{% schema %}
{
  "name": "Collapsible content",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "caption",
      "label": "Caption"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Collapsible content"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "none", "label": "No container" },
        { "value": "row", "label": "Row" },
        { "value": "section", "label": "Section container" }
      ],
      "default": "none"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color scheme"
    },
    {
      "type": "color_scheme",
      "id": "container_color_scheme",
      "default": "scheme-2",
      "label": "Container color scheme",
      "info": "Visible when Layout is set to Row or Section container."
    },
    {
      "type": "checkbox",
      "id": "open_first_collapsible_row",
      "default": false,
      "label": "Open first collapsible row"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Top padding", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Bottom padding", "default": 36 },
    { "type": "checkbox", "id": "custom_mobile_padding", "label": "Custom mobile padding", "default": false },
    { "type": "range", "id": "mobile_padding_top", "min": 0, "max": 100, "step": 2, "unit": "px", "label": "Mobile top padding", "default": 20 },
    { "type": "range", "id": "mobile_padding_bottom", "min": 0, "max": 100, "step": 2, "unit": "px", "label": "Mobile bottom padding", "default": 20 },
    { "type": "checkbox", "id": "show_section_divider", "default": false, "label": "Show section divider at the end" }
  ],
  "blocks": [
    {
      "type": "collapsible_row",
      "name": "Collapsible row",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Collapsible row",
          "label": "Heading",
          "info": "Include a heading that explains the content."
        },
        {
          "type": "richtext",
          "id": "row_content",
          "label": "Row content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collapsible content",
      "blocks": [ { "type": "collapsible_row" }, { "type": "collapsible_row" }, { "type": "collapsible_row" } ]
    }
  ]
}
{% endschema %}