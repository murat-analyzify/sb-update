{%- liquid
  assign text_placement = section.settings.text_container_placement
  assign border_radius = section.settings.border_radius
  assign container_bg = section.settings.container_background
  assign text_alignment = section.settings.text_alignment

  assign eyebrow = section.settings.eyebrow
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_url = section.settings.button_url

  assign image_1 = section.settings.image_1
  assign image_2 = section.settings.image_2
-%}

<style>
  .banner-1-1-1 {
    --border-radius: {{ border_radius }}px;
    --text-alignment: {{ text_alignment }};
  }

  .banner-1-1-1__grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: {{ border_radius }}px;
  }

  .banner-1-1-1__column {
    position: relative;
    overflow: hidden;
    border-radius: var(--border-radius);
  }

  .banner-1-1-1__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .banner-1-1-1__image-wrapper--mobile {
    display: none; 
  }

  .banner-1-1-1__column--text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: var(--text-alignment);
    align-items: var(--text-alignment);
    padding: 60px 40px;
    min-height: 500px;
  }

  .banner-1-1-1__column--text .button {
    display: flex;
    align-self: flex-start;
  }

  .banner-1-1-1[data-text-align="center"] .banner-1-1-1__column--text .button {
    align-self: center;
  }

  .banner-1-1-1[data-text-align="right"] .banner-1-1-1__column--text .button {
    align-self: flex-end;
  }

  .banner-1-1-1__text-content {
    text-align: var(--text-alignment);
    max-width: 400px;
    width: 100%;
  }
  
  .banner-1-1-1__eyebrow {
    font-size: 0.75rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 12px;
  }

  .banner-1-1-1__heading {
    font-family: serif;
    font-size: 2.8rem;
    font-weight: 500;
    margin: 0 0 16px 0;
  }
  
  .banner-1-1-1__subheading {
    font-size: 1rem;
    line-height: 1.5;
    margin: 0 0 30px 0;
  }

  /* Mobile */
    @media (max-width: 768px) {
    .banner-1-1-1__grid {
      grid-template-columns: 1fr;
    }

    .banner-1-1-1__column--image-desktop {
      display: none;
    }

    .banner-1-1-1__subheading {
      text-align: start;
    }
    
    .banner-1-1-1__column--text {
      padding: 20px;
      min-height: auto;
      justify-content: start;
      align-items: start;
    }

    .banner-1-1-1__column--text .button {
      align-self: center;
      width: 100%;
      font-size: 14px;
      font-weight: 700;
    }

    .banner-1-1-1__eyebrow {
      font-size: 1rem;
      font-weight: 800;
      line-height: 24px;
      letter-spacing: 0%;
    }

    .banner-1-1-1__heading {
      font-size: 1.75rem;
      line-height: 100%;
      font-weight: 500;
      letter-spacing: 0%;
    }

    .banner-1-1-1__image-wrapper--mobile {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: {{ border_radius }}px;
    }

    .banner-1-1-1__image-wrapper--mobile .banner-1-1-1__column {
      position: relative;
      aspect-ratio: 3 / 4; 
    }
  }
</style>


<div class="banner-1-1-1 page-width" data-text-align="{{ text_alignment }}">
  <div class="banner-1-1-1__grid">

    <div class="banner-1-1-1__image-wrapper--mobile">
      <div class="banner-1-1-1__column">
        {%- if image_1 != blank -%}<img class="banner-1-1-1__image" src="{{ image_1 | image_url: width: 400 }}" alt="{{ image_1.alt | escape }}" width="100" height="100">{%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
      </div>
      <div class="banner-1-1-1__column">
        {%- if image_2 != blank -%}<img class="banner-1-1-1__image" src="{{ image_2 | image_url: width: 400 }}" alt="{{ image_2.alt | escape }}" width="100" height="100">{%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
      </div>
    </div>

    {%- case text_placement -%}
      {%- when 'left' -%}
        <div class="banner-1-1-1__column banner-1-1-1__column--text" style="background-color: {{ container_bg }};">
          {%- if eyebrow != blank -%}<p class="banner-1-1-1__eyebrow">{{ eyebrow }}</p>{%- endif -%}
            {%- if heading != blank -%}<h2 class="banner-1-1-1__heading">{{ heading }}</h2>{%- endif -%}
            {%- if subheading != blank -%}<div class="banner-1-1-1__subheading">{{ subheading }}</div>{%- endif -%}
            {%- if button_text != blank and button_url != blank -%}<a href="{{ button_url }}" class="button">{{ button_text }}</a>{%- endif -%}

        </div>
        <div class="banner-1-1-1__column banner-1-1-1__column--image-desktop">
          {%- if image_1 != blank -%}<img class="banner-1-1-1__image" src="{{ image_1 | image_url: width: 600 }}" alt="{{ image_1.alt | escape }}" width="100" height="100">{%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
        </div>
        <div class="banner-1-1-1__column banner-1-1-1__column--image-desktop">
          {%- if image_2 != blank -%}<img class="banner-1-1-1__image" src="{{ image_2 | image_url: width: 600 }}" alt="{{ image_2.alt | escape }}" width="100" height="100">{%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
        </div>

      {%- when 'center' -%}
        <div class="banner-1-1-1__column banner-1-1-1__column--image-desktop">
          {%- if image_1 != blank -%}<img class="banner-1-1-1__image" src="{{ image_1 | image_url: width: 600 }}" alt="{{ image_1.alt | escape }}" width="100" height="100">{%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
        </div>
        <div class="banner-1-1-1__column banner-1-1-1__column--text" style="background-color: {{ container_bg }};">
          {%- if eyebrow != blank -%}<p class="banner-1-1-1__eyebrow">{{ eyebrow }}</p>{%- endif -%}
            {%- if heading != blank -%}<h2 class="banner-1-1-1__heading">{{ heading }}</h2>{%- endif -%}
            {%- if subheading != blank -%}<div class="banner-1-1-1__subheading">{{ subheading }}</div>{%- endif -%}
            {%- if button_text != blank and button_url != blank -%}<a href="{{ button_url }}" class="button">{{ button_text }}</a>{%- endif -%}

        </div>
        <div class="banner-1-1-1__column banner-1-1-1__column--image-desktop">
          {%- if image_2 != blank -%}<img class="banner-1-1-1__image" src="{{ image_2 | image_url: width: 600 }}" alt="{{ image_2.alt | escape }}" width="100" height="100">{%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
        </div>
        
      {%- when 'right' -%}
        <div class="banner-1-1-1__column banner-1-1-1__column--image-desktop">
          {%- if image_1 != blank -%}<img class="banner-1-1-1__image" src="{{ image_1 | image_url: width: 600 }}" alt="{{ image_1.alt | escape }}" width="100" height="100">{%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
        </div>
        <div class="banner-1-1-1__column banner-1-1-1__column--image-desktop">
          {%- if image_2 != blank -%}<img class="banner-1-1-1__image" src="{{ image_2 | image_url: width: 600 }}" alt="{{ image_2.alt | escape }}" width="100" height="100">{%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
        </div>
        <div class="banner-1-1-1__column banner-1-1-1__column--text" style="background-color: {{ container_bg }};">
          {%- if eyebrow != blank -%}<p class="banner-1-1-1__eyebrow">{{ eyebrow }}</p>{%- endif -%}
            {%- if heading != blank -%}<h2 class="banner-1-1-1__heading">{{ heading }}</h2>{%- endif -%}
            {%- if subheading != blank -%}<div class="banner-1-1-1__subheading">{{ subheading }}</div>{%- endif -%}
            {%- if button_text != blank and button_url != blank -%}<a href="{{ button_url }}" class="button">{{ button_text }}</a>{%- endif -%}
        </div>
    {%- endcase -%}
  </div>
</div>

{% schema %}
{
  "name": "1:1:1 Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow / Label",
      "default": "Brand Spotlight"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Goldbergh"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading / Rich Text",
      "default": "<p>Elevate your skiing experience with our sophisticated Ski Collection. Discover comfort and elegance in every descent.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop The Brand"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Image (Left)"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image (Right)"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_container_placement",
      "label": "Text Container Placement",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "right"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "container_background",
      "label": "Container Background (for the text column)",
      "default": "#E0F2F2"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "1:1:1 Banner"
    }
  ]
}
{% endschema %}