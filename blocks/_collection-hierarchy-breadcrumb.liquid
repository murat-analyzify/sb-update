{% comment %}
  Collection Hierarchy Breadcrumb block
  Renders hierarchical breadcrumb navigation for collection pages
  Based on the category filter structure from category-tree
{% endcomment %}

<div
  class="collection-hierarchy-breadcrumb-block spacing-style"
  style="
    {% render 'spacing-style', settings: block.settings %}
    {% render 'typography-style', settings: block.settings %}
  "
  {{ block.shopify_attributes }}
>
  {% render 'collection-hierarchy-breadcrumb', collection: collection %}
</div>

{% schema %}
{
  "name": "Hierarchy Breadcrumb",
  "tag": "div",
  "settings": [
    {
      "type": "header",
      "content": "t:content.typography"
    },
    {
      "type": "select",
      "id": "font",
      "label": "t:settings.font",
      "options": [
        {
          "value": "var(--font-body--family)",
          "label": "t:options.body"
        },
        {
          "value": "var(--font-primary--family)",
          "label": "t:options.heading"
        }
      ],
      "default": "var(--font-body--family)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "t:settings.font_size",
      "min": 0.7,
      "max": 1.5,
      "step": 0.1,
      "unit": "rem",
      "default": 0.9
    },
    {
      "type": "select",
      "id": "line_height",
      "label": "t:settings.line_height",
      "options": [
        {
          "value": "tight",
          "label": "t:options.tight"
        },
        {
          "value": "normal",
          "label": "t:options.normal"
        },
        {
          "value": "relaxed",
          "label": "t:options.relaxed"
        }
      ],
      "default": "normal"
    },
    {
      "type": "select",
      "id": "case",
      "label": "t:settings.case",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "uppercase",
          "label": "t:options.uppercase"
        },
        {
          "value": "lowercase",
          "label": "t:options.lowercase"
        },
        {
          "value": "capitalize",
          "label": "t:options.capitalize"
        }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "t:content.spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top_padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom_padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left_padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right_padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
