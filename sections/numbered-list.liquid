{%- liquid
  assign section_padding_top = section.settings.padding_top
  assign section_padding_bottom = section.settings.padding_bottom
  assign mobile_padding_top = section.settings.mobile_padding_top
  assign mobile_padding_bottom = section.settings.mobile_padding_bottom
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ mobile_padding_top }}px;
    padding-bottom: {{ mobile_padding_bottom }}px;
  }


  .section-{{ section.id }} .numbered-list-wrapper {
    display: flex;
    flex-direction: column;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section_padding_top }}px;
      padding-bottom: {{ section_padding_bottom }}px;
    }

  }

  {%- for block in section.blocks -%}
    {%- liquid
      assign main_font_size = block.settings.font_size
      assign sec_font_size = main_font_size | times: 0.85 | at_least: 12
    -%}

    .block-{{ block.id }} .rte-content p {
      font-size: {{ main_font_size }}px;
    }

    .block-{{ block.id }} .secondary-text {
      font-size: {{ sec_font_size }}px;
    }
    
  {%- endfor -%}

.section-numbered-list .page-width {
  max-width: 780px;
  margin: 0 auto;
}
.section-numbered-list .full-width {
  max-width: 1200px;
}
.section-numbered-list .content-position-left { margin: 0 auto 0 0; }
.section-numbered-list .content-position-center { margin: 0 auto; }
.section-numbered-list .content-position-right { margin: 0 0 0 auto; }
.section-numbered-list .heading-align-left { text-align: left; }
.section-numbered-list .heading-align-center { text-align: center; }
.section-numbered-list .heading-align-right { text-align: right; }

.section-numbered-list .list-title {
  margin-top: 0;
  margin-left: 0;
  margin-right: 0;
  line-height: 1.2;
  word-break: break-word;
  font-size: {{ section.settings.heading_font_size }}px;
  margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  color: var(--color-foreground-heading);
}

@media screen and (max-width: 750px) {
  .section-numbered-list .list-title {
    font-size: {{ section.settings.heading_font_size | times: 0.7 | round: 0 }}px;
    margin-bottom: {{ section.settings.mobile_heading_margin_bottom }}px;
    color: var(--color-foreground-heading);
  }
  .numbered-list-item {
    flex-direction: column;
    margin-right: 1rem;
    margin-left: 1rem;
  }
  .numbered-list-item__number {
    margin-bottom: 12px;
  }
  .numbered-list-item__content {
      width: 100%;
  }
}

.numbered-list-item {
  display: flex;
  align-items: flex-start;
  padding: 24px;
  border: 1px solid var(--color-border);
  background-color: var(--color-background);
  margin-top: {{ section.settings.items_gap | divided_by: 2 }}px;
  margin-bottom: {{ section.settings.items_gap | divided_by: 2 }}px;
}
.numbered-list-item__number {
  font-size: 3.2rem;
  font-weight: 600;
  line-height: 1;
  color: var(--color-foreground);
  min-width: 30px;
  margin-right: 16px;
  flex-shrink: 0;
}
.numbered-list-item__content {
  flex-grow: 1;
  word-wrap: break-word;
  min-width: 0;
}
.content-align-left .numbered-list-item__content { text-align: left; }
.content-align-center .numbered-list-item__content { text-align: center; }
.content-align-right .numbered-list-item__content { text-align: right; }

.numbered-list-item__content .rte p {
  margin: 0;
  line-height: 1.5;
}
.numbered-list-item__content .rte p:not(:last-child) {
  margin-bottom: 8px;
}
.numbered-list-item__content .secondary-text-color,
.numbered-list-item__content .secondary-text-color p,
.numbered-list-item__content .secondary-text-color a {
  color: var(--color-foreground);
}
.numbered-list-item__content .secondary-text {
  margin-top: 8px;
  line-height: 1.4;
  color: var(--color-foreground);
}
.numbered-list-item__content .secondary-text p {
  color: inherit;
}
.section-divider {
  border-top: 1px solid var(--color-foreground);
  margin-top: 0;
  width: 100%;
}
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    <div class="
      {% if section.settings.make_section_full_width %}full-width{% else %}page-width{% endif %}
      content-position-{{ section.settings.desktop_content_position }}
      content-align-{{ section.settings.content_alignment }}
    ">
      {%- if section.settings.heading != blank -%}
        <h2 class="list-title heading-align-{{ section.settings.heading_alignment }}">
          {{ section.settings.heading | escape }}
        </h2>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="numbered-list-wrapper">
          {%- for block in section.blocks -%}
            <div
              class="
                numbered-list-item
                block-{{ block.id }}
              "
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              <div class="numbered-list-item__number">
                {{ forloop.index }}.
              </div>
              <div class="numbered-list-item__content">
                {%- if block.settings.description != blank -%}
                  <div class="rte rte-content {% if block.settings.use_secondary_color %}secondary-text-color{% endif %}">
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}
                {%- if block.settings.secondary_text != blank -%}
                  <div class="rte secondary-text">
                    {{ block.settings.secondary_text }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% if section.settings.show_section_divider %}
  <div class="page-width"><div class="section-divider"></div></div>
{% endif %}

{% schema %}
{
  "name": "Numbered List",
  "class": "section-numbered-list",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "label": "Desktop content position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Text alignment inside blocks",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "make_section_full_width",
      "label": "Make section full width",
      "default": false
    },
    {
      "type": "range",
      "id": "items_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Gap between items",
      "default": 20
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How Does It Work"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 20,
      "max": 80,
      "step": 1,
      "unit": "px",
      "label": "Heading font size (Desktop)",
      "default": 48,
      "info": "Automatically scales down on mobile."
    },
    {
      "type": "range",
      "id": "heading_margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin below heading (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_heading_margin_bottom",
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px",
      "label": "Margin below heading (Mobile)",
      "default": 30
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Section padding (Desktop)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    },
    {
      "type": "header",
      "content": "Section padding (Mobile)"
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile bottom padding",
      "default": 40
    },
    {
      "type": "checkbox",
      "id": "show_section_divider",
      "label": "Show section divider at the end",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "List Item",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Main text",
          "default": "<p>Step description goes here.</p>"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 12,
          "max": 30,
          "step": 1,
          "unit": "px",
          "label": "Main text font size",
          "default": 18
        },
        {
          "type": "checkbox",
          "id": "use_secondary_color",
          "label": "Use softer color for main text",
          "default": false
        },
        {
          "type": "richtext",
          "id": "secondary_text",
          "label": "Secondary text (Optional)",
          "info": "Appears below main text, proportionally smaller."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Numbered List",
      "blocks": [
        { "type": "text" },
        { "type": "text" },
        { "type": "text" }
      ]
    }
  ]
}
{% endschema %}